@page
@{
    ViewData["Title"] = "Banks";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<title>Webet333 - @ViewData["Title"] </title>
<script>
    setInterval(function () { ddlShowBalance() }, 1000);
</script>
<div class="account-reg pad-comman-fifteen white-bg-tab-panel mar-fifty">
    <h4 class="bank-icon symbol mar-btm-ten"><strong class="pad-left-15"><span class="lang" key="bank_information"></span></strong></h4>
    <div class="bank-account-info">
        <p class="date-note"><span class="lang" key="last_update_on"></span><span id="lbl_date"><strong></strong></span></p>
        <div class="row">
            <div class="col-md-10">
                <div class="bank-entry">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center" id="bankdetail">
                            <thead>
                                <tr class="blue-bg">
                                    <th class="white-text text-center"><span class="lang" key="bank_bankDetails"><span/></th>
                                    <th class="white-text text-center"><span class="lang" key="bank_accountname"><span/></th>
                                    <th class="white-text text-center"><span class="lang" key="bank_accountnumber"><span/></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <p class="mar-comman">
            <span class="lang" key="bank_message"></span>
        </p>
        <div class="row">
            <div class="col-md-10">
                <div class="table-responsive">
                    <table width="100%" border="0" id="tbl_details" class="table table-bordered text-center transactions-limits">
                        <thead>
                            <tr class="blue-bg">
                                <th rowspan="2" class="white-text left-width text-center pad-ten"><span class="lang" key="bank_bankingoptions"></span></th>
                                <th class=" white-text table-bordered text-center transaction-limit" colspan="2"><span class="lang" key="bank_transactionlimit"></span></th>
                                <th rowspan="2" class="white-text right-width text-center pad-ten"><span class="lang" key="bank_processingtime"></span></th>
                            </tr>
                            <tr class="blue-bg">
                                <th class="white-text table-bordered custom-width text-center"><span class="lang" key="bank_Minimum"></span></th>
                                <th class="white-text table-bordered custom-width text-center"><span class="lang" key="bank_Maximum"></span></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <h5><strong><span class="lang" key="important_notes"></span></strong></h5>
        <ol id="lis_bankNote" style="width: 100%; padding-left: 20px; list-style-type: decimal;"></ol>
    </div>
</div>
<script src="../../js/pages/bank.js" type="text/javascript"></script>
<script type="text/javascript">
    function calcTime(offset) {
        d = new Date();
        utc = d.getTime() + (d.getTimezoneOffset() * 60000);
        nd = new Date(utc + (3600000 * offset));
        return nd.toLocaleString();
    }
    document.getElementById("lbl_date").innerHTML = (calcTime('+5'));
</script>